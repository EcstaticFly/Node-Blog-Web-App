    <%}else{%>
        <form action="/blog" method="POST">
            <label for="Title" class="kaushan-script-regular some" >Title</label><br>
            <input name="Title" type="text" class="feedback-input some" placeholder="Limit: 50 charchters" /><br><br><br>
            <label for="Description" class="kaushan-script-regular">Description</label><br>
            <input name="Description" type="text" class="feedback-input some" placeholder="Add Description" /><br><br><br>
            <label for="Content" class="kaushan-script-regular">Content</label><br>
            <textarea name="Content" class="feedback-input some" placeholder="Add Content"></textarea><br><br><br>
